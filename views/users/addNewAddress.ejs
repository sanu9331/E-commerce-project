<!doctype html>
<html lang="en">

<head>
    <title>Add New Address</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Custom Styles -->
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .profile-section {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .profile-section img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #007bff;
        }

        .profile-section h6 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-top: 10px;
        }

        .profile-section p {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 5px;
        }

        .address-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #e9ecef;
        }

        .address-card h6 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .address-card p {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 5px;
        }

        .address-card .actions {
            margin-top: 10px;
        }

        .address-card .actions a {
            margin-right: 10px;
            font-size: 0.9rem;
        }

        .add-address-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            cursor: pointer;
            border: 2px dashed #007bff;
        }

        .add-address-container:hover {
            background: #f8f9fa;
        }

        .add-address-container .icon {
            font-size: 24px;
            color: #007bff;
        }

        .add-address-container .text {
            font-size: 1rem;
            color: #007bff;
            font-weight: 500;
        }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background: #007bff;
            color: #fff;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .modal-title {
            font-size: 1.25rem;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            border-top: none;
        }

        /* Form Styles */
        form {
            width: 100%;
            max-width: 50em;
        }

        textarea {
            width: 100%;
            min-height: 6em;
        }

        label {
            display: block;
            font-size: 1rem;
            margin-top: 1rem;
        }

        select {
            font-size: 16px;
        }

        .postal-code {
            width: 50%;
        }

        #country {
            width: 30%;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            #country {
                width: 80%;
            }
        }

        @media (max-width: 480px) {
            #country {
                width: 70%;
            }
        }
    </style>
</head>

<body>
    <header>
        <!-- Include navbar -->
        <%- include('../layouts/header.ejs') %>
    </header>
    <main style="margin-top: 2rem;">
        <div class="container">
            <a href="/manageAddress" class="btn btn-outline-secondary mb-3">
                ‚Üê Back to Manage Address
            </a>
            <div class="row">
                <!-- Profile Section -->
                <div class="col-md-3">
                    <div class="profile-section">
                        <div class="text-center">
                            <img src="<%= userData.image ? '/images/userImages/' + userData.image : 'https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp' %>"
                                alt="Profile Image">
                            <h6 class="mt-3">
                                <%= userData.name %>
                            </h6>
                            <p>
                                <%= userData.mobile %>
                            </p>
                            <p>
                                <%= userData.email %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Add New Address Section -->
                <div class="col-md-9">
                    <div class="address-section">
                        <h4 class="font-weight-bold mb-4">Add New Address</h4>

                        <!-- Add New Address Form -->
                        <div class="address-card">
                            <form action="/add-address" method="post">
                                <div>
                                    <label for="street-address">Street Address</label>
                                    <input type="text" id="streetaddress" name="streetaddress"
                                        autocomplete="street-address" required enterkeyhint="next">
                                </div>
                                <div>
                                    <label for="postal-code">ZIP or Postal Code</label>
                                    <input type="number" class="postal-code" id="postalcode" name="postalcode"
                                        autocomplete="postal-code" enterkeyhint="next">
                                </div>
                                <div>
                                    <label for="city">City</label>
                                    <input required type="text" id="city" name="city" autocomplete="address-level2"
                                        enterkeyhint="next">
                                </div>
                                <div>
                                    <label for="state">State</label>
                                    <input required type="text" id="state" name="state" autocomplete="address-level2"
                                        enterkeyhint="next">
                                </div>
                                <div>
                                    <label for="country">Country or Region</label>
                                    <select id="country" name="country" autocomplete="country" enterkeyhint="done"
                                        required>
                                        <option>Select</option>
                                        <option value="India">India</option>
                                        <option value="United States">United States</option>
                                        <!-- Add more countries as needed -->
                                    </select>
                                </div>
                                <div style="display: flex; align-items: center;">
                                    <button class="btn btn-primary" style="margin-top: 1rem;">Save Address</button>
                                    <a href="/manageAddress"
                                        style="margin-left: 2rem; text-decoration: none; margin-top: 1rem;">Cancel</a>
                                </div>
                            </form>
                        </div>

                        <!-- Existing Addresses -->
                        <h4 class="font-weight-bold mt-4 mb-4">Existing Addresses</h4>
                        <div class="row">
                            <% if (userData.address && userData.address.length> 0) { %>
                                <% userData.address.forEach((address, index)=> { %>
                                    <div class="col-md-6">
                                        <div class="address-card">
                                            <div class="gold-members p-4">
                                                <div class="media">
                                                    <div class="mr-3">
                                                        <i class="icofont-ui-home icofont-3x"></i>
                                                    </div>
                                                    <div class="media-body">
                                                        <p class="text-black">üè† <%= address.streetaddress %>, <%=
                                                                    address.city %>, <%= address.state %>, <%=
                                                                            address.postalcode %>, <%= address.country
                                                                                %>
                                                        </p>
                                                        <p class="mb-0 text-black font-weight-bold">
                                                            <a class="text-primary mr-3"
                                                                href="/addressEdit/<%= index %>">EDIT</a>
                                                            <a class="text-danger" href="#"
                                                                onclick="deleteAddress(<%= index %>)">
                                                                <i class="icofont-ui-delete"></i> DELETE
                                                            </a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <p class="text-muted mb-0">No address specified</p>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <!-- Include footer -->
        <%- include('../layouts/footer.ejs') %>
    </footer>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>

    <script>
        function deleteAddress(index) {
            if (confirm("Are you sure you want to delete this address?")) {
                window.location.href = `/delete-address/${index}`;
            }
        }
    </script>
</body>

</html>