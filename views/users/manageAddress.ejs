<!doctype html>
<html lang="en">

<head>
    <title>Manage Address</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Custom Styles -->
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .profile-section {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .profile-section img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #007bff;
        }

        .profile-section h6 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-top: 10px;
        }

        .profile-section p {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 5px;
        }

        .address-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #e9ecef;
        }

        .address-card h6 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .address-card p {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 5px;
        }

        .address-card .actions {
            margin-top: 10px;
        }

        .address-card .actions a {
            margin-right: 10px;
            font-size: 0.9rem;
        }

        .add-address-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            cursor: pointer;
            border: 2px dashed #007bff;
        }

        .add-address-container:hover {
            background: #f8f9fa;
        }

        .add-address-container .icon {
            font-size: 24px;
            color: #007bff;
        }

        .add-address-container .text {
            font-size: 1rem;
            color: #007bff;
            font-weight: 500;
        }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background: #007bff;
            color: #fff;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .modal-title {
            font-size: 1.25rem;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            border-top: none;
        }
    </style>
</head>

<body>
    <header>
        <!-- Include navbar -->
        <%- include('../layouts/header.ejs') %>
    </header>
    <main style="margin-top: 2rem;">
        <div class="container">
            <a href="/userProfile" class="btn btn-outline-secondary mb-3">
                ‚Üê Back to Profile
            </a>
            <div class="row">
                <!-- Profile Section -->
                <div class="col-md-3">
                    <div class="profile-section">
                        <div class="text-center">
                            <img src="<%= userData.image ? '/images/userImages/' + userData.image : 'https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp' %>"
                                alt="Profile Image">
                            <h6 class="mt-3">
                                <%= userData.name %>
                            </h6>
                            <p>
                                <%= userData.mobile %>
                            </p>
                            <p>
                                <%= userData.email %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Address Section -->
                <div class="col-md-9">
                    <div class="address-section">
                        <h4 class="font-weight-bold mb-4">Manage Addresses</h4>

                        <!-- Add New Address -->
                        <div class="add-address-container" id="addNewAddressContainers">
                            <span class="icon">+</span>
                            <span class="text">Add New Address</span>
                        </div>

                        <!-- Address List -->
                        <div class="row">
                            <% if (userData.address && userData.address.length> 0) { %>
                                <% userData.address.forEach((address, index)=> { %>
                                    <div class="col-md-6">
                                        <div class="address-card">
                                            <h6>Address <%= index + 1 %>
                                            </h6>
                                            <p>üè† <%= address.streetaddress %>, <%= address.city %>, <%= address.state
                                                            %>,
                                                            <%= address.postalcode %>, <%= address.country %>
                                            </p>
                                            <div class="actions">
                                                <a href="/addressEdit/<%= index %>" class="text-primary">Edit</a>
                                                <a href="#" class="text-danger" onclick="deleteAddress(<%= index %>)">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <p class="text-muted">No address specified</p>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Address Modal -->
        <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
                <div class="modal-content text-center">
                    <div class="modal-header d-flex justify-content-center">
                        <p class="heading">Are you sure?</p>
                    </div>
                    <div class="modal-body text-left">
                        <p>Are you sure you want to delete this address? ‚ùå</p>
                    </div>
                    <div class="modal-footer flex-center">
                        <a href="" class="btn btn-outline-danger">Yes</a>
                        <a type="button" class="btn btn-danger waves-effect" data-dismiss="modal">No</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Address Modal -->
        <div class="modal fade" id="addAddress" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Address</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/add-address" method="post">
                            <div class="mb-3">
                                <label for="newAddress" class="col-form-label">üè† Add your new address here:</label>
                                <textarea class="form-control" id="newAddress" name="newAddress" required></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <input type="submit" class="btn btn-primary" value="Add Address">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <!-- Include footer -->
        <%- include('../layouts/footer.ejs') %>
    </footer>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>

    <script>
        document.getElementById('addNewAddressContainers').addEventListener('click', function () {
            window.location.href = '/addNewAddress';
        });

        function deleteAddress(addressIndex) {
            var form = document.getElementById('deleteAddressForm_' + addressIndex);
            var confirmDelete = confirm('Are you sure you want to delete this address?');
            if (confirmDelete) {
                form.submit();
            }
        }
    </script>
</body>

</html>