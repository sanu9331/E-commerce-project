<!doctype html>
<html lang="en">

<head>
    <title>Order Detail Page</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    <style>
        body {
            background: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            border: none;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.5em 0.75em;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background-color: #343a40;
            color: #fff;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .btn-link {
            text-decoration: none;
        }

        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }

        .img-fluid {
            border-radius: 8px;
        }

        .text-reset {
            color: inherit !important;
        }

        a {
            color: #5465ff;
            text-decoration: none;
        }

        a:hover {
            color: #4051b5;
        }

        .address {
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>

<body>
    <header>
        <!-- Include navbar -->
        <%- include('../layouts/header.ejs') %>
    </header>
    <main>
        <div class="container-fluid">
            <div class="container py-4">
                <!-- Back button -->
                <a href="/viewUserOrders" class="btn btn-outline-secondary mb-3">
                    ‚Üê Back to Orders
                </a>

                <!-- Page title -->
                <h1 class="display-5 mb-4">Order Details</h1>

                <!-- Main content -->
                <div class="row">
                    <div class="col-lg-8">
                        <!-- Order details card -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <span class="text-muted me-3">
                                            <%= new Date(order.orderDate).toLocaleDateString() %>
                                        </span>
                                        <span class="badge bg-info">
                                            <%= order.status %>
                                        </span>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-link text-muted p-0" type="button"
                                            data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a>
                                            </li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i>
                                                    Print</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Order items table -->
                                <table class="table table-borderless">
                                    <tbody>
                                        <% order.items.forEach(item=> { %>
                                            <tr>
                                                <td>
                                                    <% if (item.product && item.product.variants &&
                                                        item.product.variants[0] && item.product.variants[0].images &&
                                                        item.product.variants[0].images[0]) { %>
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-shrink-0">
                                                                <% if
                                                                    (item.product.variants[0].images[0].startsWith('data:image/'))
                                                                    { %>
                                                                    <img src="<%= item.product.variants[0].images[0] %>"
                                                                        alt="<%= item.product.name %>" class="img-fluid"
                                                                        style="width: 80px; height: 80px;">
                                                                    <% } else { %>
                                                                        <img src="/images/productImages/<%= item.product.variants[0].images[0] %>"
                                                                            alt="<%= item.product.name %>"
                                                                            class="img-fluid"
                                                                            style="width: 80px; height: 80px;">
                                                                        <% } %>
                                                            </div>
                                                            <div class="flex-grow-1 ms-3">
                                                                <h6 class="mb-0">
                                                                    <%= item.product.name %>
                                                                </h6>
                                                                <small class="text-muted">Color: Black</small>
                                                            </div>
                                                        </div>
                                                        <% } else { %>
                                                            <p>Product details not available</p>
                                                            <% } %>
                                                </td>
                                                <td class="text-end">
                                                    <%= item.quantity %> x $<%= item.price.toFixed(2) %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                    <tfoot>
                                        <tr class="fw-bold">
                                            <td colspan="2" class="text-end">
                                                Total: $<%= order.couponDiscountPrice !==null ?
                                                    order.couponDiscountPrice : order.totalAmount %>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                        <!-- Payment and billing details card -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6 mb-3 mb-lg-0">
                                        <h3 class="h6">Payment Method</h3>
                                        <span class="badge bg-success">
                                            <%= order.paymentMethod %>
                                        </span>
                                    </div>
                                    <div class="col-lg-6">
                                        <h3 class="h6">Billing Address</h3>
                                        <address class="address">
                                            <strong>
                                                <%= order.customer.name %>
                                            </strong><br>
                                            <% const orderAddressString=order.orderAddress; %>
                                                <% if (orderAddressString) { %>
                                                    <% const matches=orderAddressString.match(/'([^']+)'/g); %>
                                                        <% if (matches) { %>
                                                            <% const addressComponents=matches.map(match=>
                                                                match.replace(/'/g, '').trim()); %>
                                                                <% const filteredComponents=addressComponents.slice(0,
                                                                    -1); %>
                                                                    <% const addressWithoutId=filteredComponents.join(', '); %>
                                                <%= addressWithoutId %>
                                            <% } else { %>
                                                No address available
                                            <% } %>
                                        <% } else { %>
                                            No address available
                                        <% } %>
                                        </address>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>